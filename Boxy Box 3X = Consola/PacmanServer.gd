func _init():
	socket = PacketPeerUDP.new()
	if(socket.listen(4242,"127.0.0.1") != OK):
		print("An error occurred listening on port 4242")
		quit()
	else:
		print("Listening on port 4242 on localhost")

	
	socketpantalla = PacketPeerUDP.new()
	socketpantalla.set_dest_address("127.0.0.1",5252)
	


func _process(_delta):
	if(socket.get_available_packet_count() > 0):
			var data = socket.get_packet().get_string_from_ascii()

			if(data == "quit"):
				quit()
			
			
			#recibimos los inputs
			if (data == "arriba"):
				mover_personaje(1)
			elif (data == "abajo"):
				mover_personaje(2)
			elif (data == "izquierda"):
				mover_personaje(3)
			elif (data == "derecha"):
				mover_personaje(4)

				
			print("Se recibio en la consola: " + data)


func mover_personaje(dir):
	if dir ==1:
		y -= 1
	elif dir == 2:
		y += 1
	elif dir == 3:
		x += 1
	elif dir == 4:
		x -= 1
	else:
		return
	socketpantalla.put_var(["moverse",x,y])



func quit():
	socket.close()        
	print("Exiting application")    
	queue_free()

